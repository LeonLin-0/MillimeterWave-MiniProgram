/* components/chatHistoryComponent/chatHistoryComponent.wxss */
.chatContainer {
	position: relative;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: flex-start;
	height: 140rpx;
	width: 100vw;
	padding: 20rpx 0rpx;
}
.userPic {
	height: 120rpx;
	width: 120rpx;
	margin: 0rpx 20rpx 0rpx 40rpx;
	border-radius: 20rpx;
	box-shadow: 0 0 10rpx rgba(0,0,0,0.1);
}
.infoContainer {
	position: relative;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
	height: 120rpx;
	width: 75%;
	padding-bottom: 20rpx;
	border-bottom: 1rpx solid rgba(0,0,0,0.25);
}
.userName {
	height: 40rpx;
	width: fit-content;
	line-height: 40rpx;
	font-size: 34rpx;
	font-weight: bold;
	color: rgba(0,0,0,0.85);
}
.lastChat {
	height: 40rpx;
	width: 80%;
	line-height: 40rpx;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	font-size: 30rpx;
	font-size: normal;
	color: rgba(0,0,0,0.6);
}
.time {
	position: absolute;
	top: 0%;
	right: 40rpx;
	height: 30rpx;
	width: fit-content;
	font-size: 24rpx;
	color: rgba(0,0,0,0.6);
}
.redDot {
	position: absolute;
	bottom: 20rpx;
	right: 40rpx;
	height: 30rpx;
	width: 30rpx;
	padding: 4rpx;
	background: #cc463d;
	border-radius: 50%;
	text-align: center;
	font-size: 22rpx;
	color: #fff;
}
.unShow {
	display: none;
}
