/* components/sendMsg/sendMsg.wxss */
.sendMsg {
  position: relative;
	display: flex;
	flex-direction: row;
	justify-content: flex-end;
	align-items: flex-start;
	height: fit-content;
  width: 100%;
  margin-bottom: 40rpx;
}
.userPic {
	position: relative;
	height: 80rpx;
	width: 80rpx;
	margin-right: 20rpx;
	border-radius: 20rpx;
	box-shadow: 0 0 16rpx rgba(120,120,120,0.3);
}
.chatContent {
	position: relative;
	height: fit-content;
	width: fit-content;
	max-width: 63%;
	padding: 20rpx;
	margin: 0rpx 20rpx 0rpx 0rpx;
	background: #abd0f0;
	box-shadow: 0 0 20rpx rgba(90,90,90,0.1);
	border-radius: 16rpx;
  text-align: left;
	line-height: 40rpx;
	font-size: 28rpx;
}
.chatContent::before {
	content: '';
	position: absolute;
	top: 24rpx;
	right: -28rpx;
	height: 0rpx;
	width: 0rpx;
	border-color: transparent transparent transparent #abd0f0;
	border-style: solid;
	border-width: 16rpx;
}
.timeStamp {
  position: absolute;
  bottom: -25rpx;
  right: 125rpx;
  height: 20rpx;
  width: fit-content;
  line-height: 20rpx;
  font-size: 20rpx;
  color: rgba(120,120,120,0.5);
}