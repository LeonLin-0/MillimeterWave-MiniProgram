/* 顶部标题 */
.headerTitle {
	display: flex;
	position: fixed;
	top: 0;
	left: 0;
	flex-direction: column-reverse;
	height: 160rpx;
	width: 100%;
	padding-left: 60rpx;
	background: linear-gradient(180deg, rgba(219,219,219,0.3), rgba(255,255,255,0.3));
	z-index: 1;
	backdrop-filter: blur(10rpx);
	line-height: 60rpx;
	font-size: 34rpx;
	font-weight: bold;
	color: #094aad;
}