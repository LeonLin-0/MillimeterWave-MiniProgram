/* conponents/emotionComponent/emotionComponent.wxss */
/* 情绪感知 */
.emotionContainer {
	display: flex;
	position: relative;
	flex-direction: column;
	height: 300rpx;
	width: 300rpx;
	border-radius: 20rpx;
	box-shadow: 0 0 30rpx var(--shadowGray);
	backdrop-filter: blur(10px);
}
.-emotion-unknown {
	background: linear-gradient(180deg, var(--littleDeepBlue) -10%, var(--lightBlue) 90%);
}
.-emotion-happy {
	background: linear-gradient(180deg, var(--littleRed), var(--lightGray));
}
.-emotion-calm {
	background: linear-gradient(180deg, var(--littleGreen), var(--lightGray));
}
.-emotion-stressful {
	background: linear-gradient(180deg, var(--littleDeepRed), var(--lightGray));
}
.emotionTitle {
	display: inline-block;
	height: 40rpx;
	width: auto;
	margin: 20rpx 20rpx;
	font-size: 32rpx;
	line-height: 40rpx;
	font-weight: 600;
}
.emotionText {
	display: block;
	position: relative;
	height: 70rpx;
	width: auto;
	margin: 20rpx 0rpx 0rpx 20rpx;
	font-size: 60rpx;
	line-height: 70rpx;
	font-weight: 700;
	color: var(--black);
}
.emotionIcon {
	display: block;
	position: absolute;
	bottom: 20rpx;
	right: 20rpx;
	height: 120rpx;
	width: 120rpx;
	font-size: 120rpx;
	line-height: 120rpx;
	text-align: left;
}