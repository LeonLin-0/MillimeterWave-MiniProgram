/* pages/mentalHealth/psychologyTestChoicePage/psychologyTestChoicePage.wxss */
.psyTestTitle {
	position: relative;
	height: 60rpx;
	width: fit-content;
	margin: 180rpx 0rpx 0rpx 30rpx;
	line-height: 60rpx;
	font-size: 40rpx;
	font-weight: bold;
}
.psyTestTitle::before {
	content: "";
	position: absolute;
	bottom: 10%;
	left: -2%;
	height: 12rpx;
	width: 104%;
	background: #91d2a9;
	border-radius: 10rpx;
	z-index: -1;
}
.psyTestList {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	width: 90%;
	height: auto;
	margin: 50rpx auto 0rpx;
}
.psyTestContainer {
	display: grid;
	grid-template-columns: 1fr 4fr;
	width: 95%;
	height: 150rpx;
	margin-bottom: 50rpx;
	border-radius: 30rpx;
	box-shadow: 0 0 30rpx rgba(40, 40, 40, 0.2);
	animation: showComponent 0.6s ease-in-out;
}
.psyTestPic {
	height: 110rpx;
	width: 110rpx;
	margin: 20rpx;
	background: #efefef;
	border-radius: 20rpx;
	box-shadow: 0 0 15rpx rgba(40, 40, 40, 0.2);
}
.psyTestTextContainer {
	display: flex;
	position: relative;
	flex-direction: column;
	justify-content: center;
	height: 150rpx;
	width: 100%;
}
.psyTestTextContainer .psyTestTitle {
	font-size: 34rpx;
	margin: 0 0 0 10rpx;
}
.psyTestTextContainer .psyTestTitle::before {
	bottom: 15%;
	height: 10rpx;
}
.psyTestNum {
	display: block;
	position: absolute;
	bottom: 10%;
	right: 8%;
	height: 36rpx;
	width: fit-content;
	line-height: 36rpx;
	text-align: center;
	font-size: 26rpx;
}
@keyframes showComponent {
  0% {
    opacity: 0;
    transform: translateY(50%) scale(0.9);
  }
  100% {
    opacity: 1;
    transform: translateX(0) scale(1);
  }
}