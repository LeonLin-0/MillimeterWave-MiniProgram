/* pages/mentalHealth/psychologistDetailPage/psychologistDetailPage.wxss */
.psyInfoContainer {
	height: fit-content;
	width: 100vw;
	margin-top: 170rpx;
}
.headerContainer {
	position: relative;
	height: fit-content;
	width: 100vw;
}
.headerImg {
	height: 100vw;
	width: 100vw;
}
.infoContainer {
	box-sizing: border-box;
	position: absolute;
	bottom: 0rpx;
	left: 0%;
	height: fit-content;
	width: 100%;
	padding: 40rpx 40rpx 50rpx;
	background: linear-gradient(180deg, rgba(0,0,0,0), rgba(0,0,0,0.1)10%, rgba(0,0,0,0.7));
	color: #fff;
	text-shadow: 0 0 20rpx rgba(0, 0, 0, 1);
	font-weight: bold;
}
.name {
	height: 56rpx;
	width: fit-content;
	margin-bottom: 10rpx;
	line-height: 56rpx;
	font-size: 46rpx;
}
.introduce {
	height: fit-content;
	width: 100%;
	margin-bottom: 5rpx;
	line-height: 40rpx;
	text-align: left;
	font-size: 30rpx;
	font-weight: normal;
}
.tagContainer {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
	height: fit-content;
	width: 100%;
	margin-bottom: 5rpx;
}
.tag {
	height: 32rpx;
	width: fit-content;
	padding: 4rpx 10rpx;
	margin: 6rpx 18rpx 6rpx 0rpx;
	background: var(--blue);
	border-radius: 14rpx;
	line-height: 32rpx;
	text-shadow: none;
	font-size: 24rpx;
	font-weight: normal;
	color: #fff;
}
.peopleNum {
	height: 30rpx;
	width: 100%;
	line-height: 30rpx;
	text-align: right;
	text-shadow: none;
	font-size: 24rpx;
	color: rgba(255,255,255,1);
	font-weight: normal;
	text-shadow: 0 0 10rpx rgba(0,0,0,0.);
}
.infoTable {
	display: grid;
	grid-template-columns: 1fr 1fr 1fr 1fr;
	height: fit-content;
	width: 100%;
	background: #fff;
	border-radius: 36rpx 36rpx 0rpx 0rpx;
	transform: translateY(-40rpx);
}
.block {
	height: fit-content;
	width: 100%;
	padding-top: 30rpx;
}
.num {
	display: block;
	height: 50rpx;
	width: 100%;
	transform: scaleY(1.15);
	line-height: 50rpx;
	text-align: center;
	font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	font-size: 40rpx;
	font-weight: bold;
}
.title {
	height: 30rpx;
	width: 100%;
	margin-top: 8rpx;
	line-height: 30rpx;
	font-size: 26rpx;
	text-align: center;
	color: gray;
}
.toChatBtn {
	position: absolute;
	height: 80rpx;
	width: fit-content;
	right: 40rpx;
	margin: 40rpx 0rpx 0rpx;
	background: linear-gradient(45deg, var(--blue), var(--lightBlue));
	border-radius: 30rpx;
	font-size: 32rpx;
	font-weight: bold;
	text-shadow: 0 0 10rpx rgba(0,0,0,0.3);
	color: rgb(255,255,255);
}