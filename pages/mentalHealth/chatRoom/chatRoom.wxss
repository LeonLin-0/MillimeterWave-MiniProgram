/* pages/mentalHealth/chatRoom/chatRoom.wxss */
page {
	position: relative;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
	padding: 0;
	margin: 0;
	box-sizing: border-box;
	height: 100vh;
	width: 100vw;
  background: #f5f5f5;
}
.chatContainer {
  height: 94vh;
  width: 100%;
  overflow-y: scroll;
}
sendmsg {
	height: fit-content;
	width: 100%;
}
getmsg {
	height: fit-content;
	width: 100%;
}
sendPic {
  height: fit-content;
  width: 100%;
}
getPic {
  height: fit-content;
  width: 100%;
}
.bottomContainer {
	position: sticky;
	bottom: 0;
	left: 0;
	height: fit-content;
	width: 100%;
	background: #f5f5f5;
	border-top: 2rpx solid #ececec;
}
.inputContainer {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  height: fit-content;
  max-height: 200rpx;
  width: 100%;
  padding: 14rpx 0rpx 14rpx;
}
.userInput {
	height: auto;
	min-height: 40rpx;
	max-height: 120rpx;
	width: 63%;
	border-radius: 20rpx;
	margin-left: 5%;
	padding: 10rpx 20rpx;
	background: #fff;
	border: 1rpx solid #ececec;
	outline: none;
  vertical-align: top;
	line-height: 40rpx;
	word-wrap: break-word;
	font-size: 32rpx;
}
.moreFunction {
  height: 60rpx;
  width: 60rpx;
  margin: 0rpx 10rpx 0rpx;
  font-size: 50rpx;
}
.sendBtn {
  height: 60rpx;
  width: fit-content;
  padding: 0rpx 20rpx;
  margin: 0;
  line-height: 60rpx;
  border-radius: 20rpx;
  background: linear-gradient(90deg, var(--blue), var(--lightBlue));
  font-size: 30rpx;
  font-weight: bold;
}
.rotate {
  transition: all 0.5s ease-in-out;
  transform: rotateZ(45deg);
}
.unrotate {
  transition: all 0.5s ease-in-out;
  transform: rotateZ(0deg);
}
.moreFunctionContainer {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  gap: 50rpx;
  height: 200rpx;
  width: 100%;
  padding: 0rpx 50rpx;
}
.function {
  height: 60rpx;
  width: 60rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 15rpx rgba(210,210,210,0.8);
}
.showFunArea {
  height: 200rpx;
  opacity: 1;
  transform: scaleY(1);
  transition: all 0.3s ease-in-out;
}
.unShowFunArea {
  height: 0rpx;
  opacity: 0;
  transform: scaleY(0);
  transition: all 0.3s ease-in-out;
}
.audioBtn {
  height: 60rpx;
  width: 70%;
  margin: 0rpx 40rpx 0rpx 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 20rpx;
  background: linear-gradient(90deg, var(--blue), var(--lightBlue));
  font-size: 30rpx;
  font-weight: bold;
}
.keyboardBtn {
  height: 60rpx;
  width: 60rpx;
}