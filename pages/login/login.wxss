/* 底部区域 */
.footer {
	position: relative;
	height: fit-content;
	width: 100%;
	text-align: center;
}
.changeState {
	position: relative;
	height: 50rpx;
	width: fit-content;
	margin: 10rpx auto 0rpx;
	line-height: 50rpx;
	font-size: 30rpx;
	text-decoration: underline;
	color: gray;
}
.button {
	position: absolute;
	bottom: -100rpx;
	right: 60rpx;
	height: 50rpx;
	width: auto;
	padding: 10rpx 30rpx;
	background: linear-gradient(90deg, var(--blue), var(--lightBlue));
	border-radius: 20rpx;
	box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.4);
	line-height: 50rpx;
	font-weight: bold;
	font-size: 36rpx;
	color: #fff;
}
@keyframes showContainer {
	0% {
		opacity: 0;
		transform: scale(0.85) translateY(30%);
	}
	100% {
		opacity: 1;
		transform: scale(1) translateY(0);
	}
}
@keyframes enlarge {
	0% {
		transform: translateY(0%);
	}
	50% {
		transform: translateY(-30%);
	}
	100% {
		transform: translateY(0%);
	}
}