/* pages/login/login.wxss */
page {
	height: 100%;
	width: 100%;
	margin: 0;
	padding: 0;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
	text-align: center;
}

/* 顶部登录状态 */
.title {
	position: absolute;
	top: 15%;
	left: 10%;
	height: 70rpx;
	width: auto;
	padding: 0rpx 15rpx;
	border-radius: 20rpx;
	line-height: 70rpx;
	text-align: left;
	font-size: 50rpx;
	font-weight: bold;
	color: #000;
}
.title::before {
	content: '';
	position: absolute;
	top: -80%;
	left: 2%;
	height: 50rpx;
	width: 50rpx;
	z-index: 1;
	border-radius: 50%;
	background: linear-gradient(45deg, var(--deepBlue), #efefef);
	filter: blur(1rpx);
}

/* 小程序名 */
.miniprogramTitle {
	position: relative;
	height: 150rpx;
	width: 100%;
	margin-top: 480rpx;
	line-height: 150rpx;
	font-size: 80rpx;
	font-weight: bold;
	color: var(--deepBlue);
}
.miniprogramTitle::before {
	content: '';
	position: absolute;
	top: -100%;
	left: -10%;
	height: 250rpx;
	width: 250rpx;
	z-index: -1;
	border-radius: 50%;
	background: linear-gradient(var(--blue), rgb(206, 206, 206));
	filter: blur(18rpx);
	animation: ballAnimation3 20s ease infinite;
}
.miniprogramTitle::after {
	content: '';
	position: absolute;
	top: 60%;
	right: -18%;
	height: 200rpx;
	width: 200rpx;
	z-index: -1;
	border-radius: 50%;
	background: linear-gradient(rgb(206, 206, 206), #efefef);
	filter: blur(14rpx);
}

/* 信息填写区域 */
.infoContainer {
	position: absolute;
	top: 38%;
	left: 5%;
	height: auto;
	width: 90%;
	margin: 200rpx auto 0rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	text-align: left;
}
.infoContainer::before {
	content: '';
	position: absolute;
	top: 10rpx;
	left: 10%;
	height: 120rpx;
	width: 120rpx;
	border-radius: 50%;
	z-index: -1;
	background: linear-gradient(180deg, var(--lightBlue), var(--gray));
	filter: blur(16rpx);
	animation: ballAnimation2 4s ease-in-out infinite;
}
.infoContainer::after {
	content: '';
	position: absolute;
	top: 450rpx;
	left: 40%;
	height: 250rpx;
	width: 250rpx;
	z-index: -1;
	border-radius: 50%;
	background: linear-gradient(-45deg, var(--darkGray), var(--lightBlue));
	filter: blur(15px);
	animation: ballAnimation1 4s ease-in-out infinite;
}
@keyframes ballAnimation1 {
	0% {
		transform: scale(0.85) translateX(0rpx);
		filter: blur(5px);
	}
	50% {
		transform: scale(0.75) translateX(80rpx);
		filter: blur(15px);
	}
	100% {
		transform: scale(0.85) translateX(0rpx);
		filter: blur(5px);
	}
}
@keyframes ballAnimation2 {
	0% {
		transform: scale(0.9) translateY(0rpx) translateX(0rpx);
		filter: blur(6px);
	}
	50% {
		transform: scale(0.7) translateY(-40rpx) translateY(-40rpx);
		filter: blur(16px);
	}
	100% {
		transform: scale(0.9) translateY(0rpx) translateY(0rpx);
		filter: blur(6px);
	}
}
@keyframes ballAnimation3 {
	0% {
		transform: rotateZ(0deg);
	}
	50% {
		transform: rotateZ(180deg);
	}
	100% {
		transform: rotateZ(360deg);
	}
}
/* 切换登陆状态 */
.loginMethodContainer {
	display: grid;
	grid-template-columns: 1fr 0fr 1fr;
	justify-content: center;
	align-items: center;
	height: 50rpx;
	width: 50%;
	margin-bottom: 40rpx;
	text-align: center;
	font-size: 36rpx;
	font-weight: bold;
	color: #5a5a5a;
}
.registerMethodContainer {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 50rpx;
	width: 50%;
	margin-bottom: 40rpx;
	text-align: center;
	font-size: 36rpx;
	font-weight: bold;
}
.line {
	height: 100%;
	width: 0;
	background: #5c5c5c;
	border: 2rpx solid #5c5c5c;
}
.selected {
	transition: all 0.15s ease-in-out;
	color: #0058cc;
	animation: enlarge 0.4s ease-in-out;
}
.unSelected {
	transition: all 0.15s ease-in-out;
	color: #5a5a5a;
}

/* 输入区域 */
.inputUserPhone {
	position: relative;
	height: 80rpx;
	width: 65%;
	padding: 5rpx 10rpx 5rpx 130rpx;
	margin-bottom: 20rpx;
	background: rgb(90,90,90,0.15);
