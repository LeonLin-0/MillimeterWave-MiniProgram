/* pages/home/home.wxss */
page {
	margin: 0;
	padding: 0;
}
/* 顶部模块 */
.header {
  display: flex;
	flex-direction: column;
	justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 160rpx 0rpx 50rpx;
	width: 100%;
	height: auto;
	background: linear-gradient(180deg, var(--littleDeepBlue), var(--white));
}
/* 头像 */
.avatar {
	height: 220rpx;
  width: 220rpx;
  margin-top: 50rpx;
	border-radius: 50%;
	border: 6rpx solid #fff;
	box-shadow: 0 0 40rpx rgba(209, 209, 209, 0.5);
	background: no-repeat;
}
/* 个人信息 */
.personalInfo {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
	height: auto;
	width: 85%;
	margin-top: 50rpx;
	font-weight: bold;
	font-size: 36rpx;
}
.name {
  height: 60rpx;
  font-size: 46rpx;
	width: auto;
	margin: 10rpx 0;
	line-height: 60rpx;
}
.detailInfo {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: auto;
  margin-top: 10rpx;
}
.age, .height, .weight {
  display: inline;
  position: relative;
  height: 34rpx;
  width: auto;
  margin: 0 10rpx 10rpx;
  padding: 8rpx 16rpx;
  border-radius: 14rpx;
  background: var(--white);
  line-height: 34rpx;
  font-size: 30rpx;
  font-weight: normal;
  color: var(--black);
  box-shadow: inset 1rpx 1rpx 10rpx rgba(255,255,255,0.5), 1rpx 1rpx 10rpx rgba(0,0,0,0.2);
}
/* 疾病 */
.disease {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  height: auto;
  width: 100%;
  margin-top: 10rpx;
}
.diseaseName {
  display: inline-block;
  position: relative;
  height: 40rpx;
  width: auto;
  padding: 8rpx 14rpx;
  margin: 0 10rpx 10rpx;
  background-color: var(--white);
  box-shadow: inset 1rpx 1rpx 10rpx rgba(255,255,255,0.5), 1rpx 1rpx 10rpx rgba(0,0,0,0.2);
  border-radius: 14rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* 功能模块 */
.body {
  display: flex;
  flex-direction: column;
  height: auto;
  width: 100%;
  padding-top: 50rpx;
  font-size: 38rpx;
  font-weight: normal;
  color: var(--black);
}
.setting {
  height: 100rpx;
  width: auto;
  padding: 0 70rpx;
  margin-bottom: -1rpx;
  background: var(--white);
  border-top: 1rpx solid var(--shadowGray);
  border-bottom: 1px solid var(--shadowGray);
  line-height: 100rpx;
  border-collapse: collapse;
}
.rightIcon {
  height: 100rpx;
  width: auto;
  float: right;
}
.log {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  width: 70%;
  margin: 40rpx auto 80rpx;
  background-color: var(--white);
  border-radius: 20rpx;
  box-shadow: 10rpx 10rpx 20rpx var(--shadowGray), inset 10rpx 10rpx 20rpx var(--lightGray);
}